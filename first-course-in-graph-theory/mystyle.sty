% Typesetting macros
\renewcommand{\it}[1] {\textit{#1}}
\renewcommand{\bf}[1] {\textbf{#1}}
\newcommand{\ul}[1] {\underline{#1}}

% Set macros
\renewcommand{\emptyset} {\varnothing}
\newcommand{\bbN} {\ensuremath{\mathbb{N}}}
\newcommand{\bbZ} {\ensuremath{\mathbb{Z}}}
\newcommand{\bbQ} {\ensuremath{\mathbb{Q}}}
\newcommand{\bbR} {\ensuremath{\mathbb{R}}}
\newcommand{\bbC} {\ensuremath{\mathbb{C}}}
\newcommand{\union} {\ensuremath{\cup}}
\newcommand{\intersect} {\ensuremath{\cap}}
\newcommand{\bigunion} {\ensuremath{\bigcup}}
\newcommand{\bigintersect} {\ensuremath{\bigcap}}

% Angle macros
\newcommand{\degree}[1]{\ensuremath{#1^{\circ}}}

% Graph macros
\renewcommand{\deg}[2]{\ensuremath{\text{\normalfont deg}_{#1} #2}}
\newcommand{\od}[2]{\ensuremath{\text{\normalfont od}_{#1} #2}}
\newcommand{\id}[2]{\ensuremath{\text{\normalfont id}_{#1} #2}}

% Modulo macros
\renewcommand{\mod}[1]{\ensuremath{\text{\normalfont mod } #1}}

% Theorem environment macros
\declaretheoremstyle[
	spaceabove=10pt,
	headfont=\normalfont\bfseries,
	headpunct={},
	notefont=\normalfont\bfseries,
	notebraces={(}{)},
	bodyfont=\normalfont\itshape,
	spacebelow=6pt
]{TStyle}

\declaretheorem[style=TStyle,name=Theorem,numberwithin=chapter]{thm}
\declaretheorem[style=TStyle,name=Corollary,sibling=thm]{cor}
\declaretheorem[style=TStyle,name=Proposition,sibling=thm]{prop}
\declaretheorem[style=TStyle,name=Lemma,sibling=thm]{lem}
\declaretheorem[style=TStyle,name=Conjecture,sibling=thm]{conj}

% Consequence environment macros
\declaretheoremstyle[
	spaceabove=6pt,
	headpunct={},
	postheadspace=0pt,
	bodyfont=\normalfont\itshape,
	numbered=no,
	spacebelow=6pt
]{CStyle}

\declaretheorem[style=CStyle,name={}]{cons}

% Question environment macros
\declaretheoremstyle[
	spaceabove=6pt,
	headfont=\normalfont\bfseries,
	headpunct={:},
	bodyfont=\normalfont\itshape,
	spacebelow=6pt
]{QStyle}

\declaretheorem[style=QStyle,name=Question,sibling=thm]{quest}
\declaretheorem[style=QStyle,name=Problem,sibling=thm]{prob}

% Proof environment macros
\declaretheoremstyle[
	spaceabove=6pt,
	headfont=\normalfont\bfseries,
	headpunct={.},
	bodyfont=\normalfont,
	numbered=no,
	spacebelow=6pt
]{PStyle}

\declaretheorem[style=PStyle,name=Proof,qed=$\square$]{pf}
\declaretheorem[style=PStyle,name=Answer,qed=$\diamondsuit$]{ans}
\declaretheorem[style=PStyle,name=Solution,qed=$\diamondsuit$]{soln}
\declaretheorem[style=PStyle,name=Construction,qed=$\diamondsuit$]{con}

% Definition environment macros
\declaretheoremstyle[
	spaceabove=10pt,
	headfont=\normalfont\bfseries,
	headpunct={},
	bodyfont=\normalfont,
	spacebelow=6pt
]{DStyle}

\declaretheorem[style=DStyle,name=Definition,sibling=thm]{defn}
\declaretheorem[style=DStyle,name=Example,qed=$\diamondsuit$,sibling=thm]{exmp}
\declaretheorem[style=DStyle,name=Notation,sibling=thm]{notn}
\declaretheorem[style=DStyle,name=Addendum,sibling=thm]{addm}

% Exercise environment macros
\declaretheoremstyle[
	spaceabove=6pt,
	headfont=\normalfont\bfseries,
	headpunct={},
	bodyfont=\normalfont,
	spacebelow=6pt
]{EStyle}

\declaretheorem[style=EStyle,name={},numberwithin=chapter]{exer}

% Exercise section environment macros
\declaretheoremstyle[
	spaceabove=20pt,
	headfont=\normalfont\bfseries,
	headpunct={},
	spacebelow=6pt
]{ESStyle}

\declaretheorem[style=ESStyle,name=Exercises for Section,numberwithin=chapter]{exers}

% Remark environment macros
\declaretheoremstyle[
	spaceabove=10pt,
	headfont=\normalfont\itshape,
	headpunct={},
	bodyfont=\normalfont,
	numbered=no,
	spacebelow=6pt
]{RStyle}

\declaretheorem[style=RStyle,name=Remark,qed=$\diamond$]{rem}
\declaretheorem[style=RStyle,name=Warning,qed=$\diamond$]{warn}
\declaretheorem[style=RStyle,name=Scholium,qed=$\diamond$]{sch}

% Bibliography environment macros
\bibliographystyle{plain}